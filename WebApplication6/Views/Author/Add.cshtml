@model WebApplication6.Models.Author;

<div class="container-fluid mt-5 pt-5">
<h1>Add a new author</h1>
<hr />
<div class="row ">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="ShortBiography" class="control-label"></label>
                    <textarea class="form-control" rows="5" asp-for="ShortBiography"></textarea>
                </div>
                <span asp-validation-for="ShortBiography" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Biography" class="control-label"></label>
                    <textarea class="form-control" rows="5" asp-for="Biography"></textarea>
                </div>
                <span asp-validation-for="Biography" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <select asp-for="Genre" asp-items="@new SelectList(Enum.GetValues(typeof(Genre)))" class="btn  btn-outline-dark "></select>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="GetAuthors" class="btn  btn-outline-info">Back to List</a> |
                <input type="submit" value="Add" class="btn btn-outline-info" />

            </div>
        </form>
    </div>
</div>
</div>


