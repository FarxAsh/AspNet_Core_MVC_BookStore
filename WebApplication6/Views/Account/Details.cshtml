@model List<WebApplication6.Models.OrderDetailes>



<div class="container-fluid mt-5 pt-2">

    <table class="table mt-3">
        <thead class="thead-dark">
            <tr>

                <th class="text-center">Book title</th>
                <th class="text-center">Author</th>
                <th class="text-center">Genre</th>
                <th class="text-center">Number of pages</th>
                <th class="text-center">Publish date</th>
                <th class="text-center">Book price</th>
                <th class="text-center">Book cover</th>





            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>

                <td class="text-center align-middle">@item.Book.Title</td>
                <td class="text-center align-middle">@item.Book.Author.FirstName @item.Book.Author.LastName</td>
                <td class="text-center align-middle">@item.Book.Genre.ToString()</td>
                <td class="text-center align-middle">@item.Book.Pages</td>
                <td class="text-center align-middle">@item.Book.Year.ToString()</td>
                <td class="text-center align-middle">@item.Book.Price.ToString("c")</td>
                <td class="text-center"><img src="@item.Book.Image" width="100" height="100"></td>






            </tr>

            }


        </tbody>

    </table>


</div>

